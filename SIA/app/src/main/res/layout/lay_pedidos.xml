<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ActividadPrincipal"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Datos de Cliente"
        android:id="@+id/textView5"
        android:layout_gravity="center_horizontal"
        android:textAlignment="gravity"
        android:paddingTop="3pt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Id. Visita"
        android:id="@+id/textView" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="10pt"
        android:id="@+id/et_dni"
        android:background="#ffc0e6ff"
        android:textSize="7pt"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Nombres"
        android:id="@+id/textView2" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="10pt"
        android:id="@+id/et_nombreyapellido"
        android:background="#ffc0e6ff"
        android:textSize="7pt"  />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Direccion"
        android:id="@+id/textView3" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="10pt"
        android:id="@+id/et_direccion"
        android:background="#ffc0e6ff"
        android:textSize="7pt"  />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Pedido"
        android:id="@+id/textView4" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:id="@+id/et_pedido"
        android:layout_weight="0.67"
        android:textAlignment="gravity"
        android:background="#ffc0e6ff"
        android:textSize="7pt" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CARGAR"
            android:id="@+id/btn_consultar"
            android:onClick="iniform"
            android:textSize="6pt"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="guardar"
            android:id="@+id/btn_alta"
            android:onClick="alta"
            android:layout_weight="19"
            android:textSize="6pt"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Borrar"
            android:id="@+id/btn_baja"
            android:onClick="baja"
            android:layout_weight="19"
            android:textSize="6pt"/>



        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modifica"
            android:id="@+id/btn_modificar"
            android:onClick="modificacion"
            android:layout_weight="19"
            android:textSize="6pt"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0pt"
            android:text="primero"
            android:id="@+id/btn_inicio"
            android:layout_weight="19"
            android:onClick="inicio"
            android:textSize="6pt"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anterior"
            android:id="@+id/btn_anterior"
            android:layout_weight="19"
            android:onClick="anterior"
            android:textSize="6pt"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sig"
            android:id="@+id/btn_siguiente"
            android:layout_weight="19"
            android:onClick="siguiente"
            android:textSize="6pt"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ultimo"
            android:id="@+id/btn_fin"
            android:layout_weight="19"
            android:onClick="fin"
            android:textSize="6pt"/>
    </LinearLayout>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Limpiar"
        android:id="@+id/button"
        android:onClick="onReset"
        android:layout_gravity="center_horizontal"
        android:textSize="7pt"/>
</LinearLayout>